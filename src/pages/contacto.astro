---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE } from '../consts';
---

<Layout>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
    <!-- Hero Section - Más visual -->
    <section class="text-center mb-16 bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16 px-6 rounded-xl shadow-xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Contáctanos</h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">Estamos aquí para ayudarte. ¡Envíanos tu consulta y te responderemos pronto!</p>
    </section>

    <!-- Contact Form Section - Más elegante -->
    <section class="bg-white p-8 md:p-10 rounded-xl shadow-lg border border-gray-100 max-w-4xl mx-auto">
      <h2 class="text-3xl font-semibold text-gray-800 mb-8 text-center">Formulario de Contacto</h2>
      <form action="#" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nombre completo*</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="Ej: Juan Pérez"
              class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico*</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Ej: juan@ejemplo.com"
              class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
            />
          </div>
        </div>

        <!-- Nuevo campo de Asunto -->
        <div>
          <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Asunto*</label>
          <select
            id="subject"
            name="subject"
            required
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
          >
            <option value="" disabled selected>Selecciona un asunto</option>
            <option value="consulta">Consulta general</option>
            <option value="soporte">Soporte técnico</option>
            <option value="ventas">Información de productos</option>
            <option value="trabajo">Oportunidades de trabajo</option>
            <option value="otro">Otro</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Mensaje*</label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            placeholder="Escribe aquí tu mensaje..."
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
          ></textarea>
        </div>

        <div class="text-center pt-4">
          <button
            type="submit"
            class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-blue-600 to-indigo-700 text-white text-lg font-medium rounded-lg shadow-lg hover:from-blue-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 transform hover:-translate-y-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
            </svg>
            Enviar mensaje
          </button>
        </div>
      </form>
    </section>

    <!-- Additional Info Section - Más organizada -->
    <section class="mt-20 max-w-4xl mx-auto">
      <div class="bg-gray-50 p-8 md:p-10 rounded-xl shadow-inner border border-gray-200">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Otras formas de contacto</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Dirección -->
          <div class="text-center">
            <div class="bg-blue-100 w-14 h-14 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Visítanos</h3>
            <p class="text-gray-600">Calle Principal 1234</p>
            <p class="text-gray-600">Ciudad, País</p>
          </div>

          <!-- Teléfono -->
          <div class="text-center">
            <div class="bg-green-100 w-14 h-14 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Llama</h3>
            <p class="text-gray-600">+1 (234) 567-8900</p>
            <p class="text-gray-600">Lun-Vie: 9am - 6pm</p>
          </div>

          <!-- Email -->
          <div class="text-center">
            <div class="bg-purple-100 w-14 h-14 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Escríbenos</h3>
            <p class="text-gray-600">info@tudominio.com</p>
            <p class="text-gray-600">soporte@tudominio.com</p>
          </div>
        </div>
      </div>

      <!-- Google Maps Section - Mejor integrada -->
      <div class="mt-12">
        <h3 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Nuestra ubicación</h3>
        <div class="aspect-w-16 aspect-h-9 rounded-xl overflow-hidden shadow-lg border border-gray-200">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.201415812046!2d-122.08424948468196!3d37.42199977982574!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fbb8d7b8d3c8f%3A0x5c5189f1b27a9e90!2sGoogleplex!5e0!3m2!1ses!2sus!4v1673946155298!5m2!1ses!2sus"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="rounded-xl"
          ></iframe>
        </div>
      </div>
    </section>
  </main>
</Layout>