--- 
import Layout from '../layouts/Layout.astro'; 
---

<Layout>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
    <!-- Hero Section -->
    <section class="text-center mb-16 bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16 px-6 rounded-xl shadow-xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Iniciar Sesión</h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">Accede al panel administrativo con tus credenciales.</p>
    </section>

    <!-- Login Form -->
    <section class="bg-white p-8 md:p-10 rounded-xl shadow-lg border border-gray-100 max-w-3xl mx-auto">
      <h2 class="text-3xl font-semibold text-gray-800 mb-8 text-center">Acceso de Administrador</h2>
      <form action="/api/auth/login" method="POST" class="space-y-6" id="login-form">
        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Nombre de Usuario</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            placeholder="Ej: admin"
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="••••••••"
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150"
          />
        </div>

        <div class="text-center pt-4">
          <button
            type="submit"
            class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-blue-600 to-indigo-700 text-white text-lg font-medium rounded-lg shadow-lg hover:from-blue-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 transform hover:-translate-y-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3a1 1 0 001 1h2a1 1 0 100-2h-1V7z" clip-rule="evenodd" />
            </svg>
            Iniciar Sesión
          </button>
        </div>
      </form>
    </section>
  </main>
</Layout>
